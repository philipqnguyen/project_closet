<h1>My Closet</h1>
<%= link_to "New Item", new_item_path, class: 'btn btn-primary' %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Item name</th>
      <th>Item type</th>
      <th>Item color</th>
      <th>Quantity</th>
      <th>Size</th>
      <th>Item date owned</th>
      <th>Date uploaded</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.item_name %></td>
        <td><%= item.item_type %></td>
        <td><%= item.item_color %></td>
        <td><%= item.quantity %></td>
        <td><%= item.size %></td>
        <td><%= item.item_date_owned %></td>
        <td><%= item.created_at.strftime("%b. %d %Y") %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
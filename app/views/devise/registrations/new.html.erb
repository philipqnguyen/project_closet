<h2>Sign up</h2>


<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }, wrapper: :horizontal_form) do |f| %>
    	<%= devise_error_messages! %>

    	<%= f.input :email %>

        <%= f.input :first_name %>

        <%= f.input :last_name %>

    	<%= f.input :password %>

    	<%= f.input :password_confirmation %>
    	<div class="text-center">
    	<%= f.submit "Sign up", class: 'btn btn-primary' %>
    	</div>
    <% end %>
  </div>
</div>
<br/>
<div class="text-center">
<%= render "devise/shared/links" %>
</div>
